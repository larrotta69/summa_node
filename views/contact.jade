extends layout

block content
	section.container
		article.row.contact_module
			.col.s6
				ul.tabs
					li.tab.col.s3
						a(href="#bogota") Bogotá
					li.tab.col.s3
						a(href="#barcelona") Barcelona
					li.tab.col.s3
						a(href="#lima") Lima
			.row.contact_forms
				div#bogota.s12.col.contact_form
					form#formMail(name="mailer", method="post", action="/mailer")
						.row
							.input-field.col.s6
								i.material-icons.prefix account_circle
								input#icon_prefix.validate(type="text", name="nombre")
								label(for="icon_prefix") Name
							.input-field.col.s6
								i.material-icons.prefix phone
								input#icon_telephone.validate(type="text", name="telefono")
								label(for="icon_telephone") Telephone
							.input-field.col.s12
								i.material-icons.prefix mode_edit
								textarea#icon_message.materialize-textarea(name="mensaje")
								label(for="icon_message") Message
							.col.s12.center-align
								button.btn.waves-effect.waves-light(type="submit") Enviar
									i.material-icons send
					.row.mapa
						.s12.col
							#map-canvas-bogota.map-canvas
					.row.loc
						.m6.col.left-align
							p Bogotá - Colombia
