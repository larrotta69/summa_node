extends ../layout

block content
	.back.edit_item
		section.container
			h1.left.
				#{title}
			.right.actions_item
				a.btn-floating.btn-large.waves-effect.waves-light.red(href="/servicios/#{service._id}/edit")
					i.material-icons create
				//a.btn-floating.btn-large.waves-effect.waves-light.red
				//	i.material-icons clear
						
			article.row.services_module
				div.col.s12
					h2.title.bold #{service.title}
					p.desc #{service.content}
					ul.list_services 
						- each item, i in service.serviceList
							li
								= item
				
	ul
		li
			#{service}
			
			
