extends ../layout

block content
    section.container
        article.row.team_module
            - each member, index in members
                a(href="#modal#{index}", class="modal-trigger")
                    div.col.s12.m6.member
                      if member.picture
                        div.col.s12.m6.member_image
                          img(src="/img/equipo/#{member.picture}")
                        div.col.s12.m6.image
                            h5.member_name #{member.name}
                            p.member_title #{member.title}
                            p.member_mail #{member.mail}
                            a(href="#{member.linkedin}", alt="LinkedIn", target="_blank")
                              img.linke(src="/img/linkedin.svg")
                      else
                        div.col.s12.m6.image
                            h5.member_name #{member.name}
                            p.member_title #{member.title}
                            p.member_mail #{member.mail}
                            a(href="#{member.linkedin}", alt="LinkedIn", target="_blank")
                              img.linke(src="/img/linkedin.svg")
                          
                              
              div.col.s12.m6.member
                  div.col.s12.m6.member_image
                      img(src="/img/equipo/cesar_prieto.jpg")
                  div.col.s12.m6.image
                      h5.member_name Cesar Prieto
                      p.member_title Oficina Lima
              div.col.s12.m6.member
                  div.col.s12.m6.member_image
                      img(src="/img/equipo/cesar_prieto.jpg")
                  div.col.s12.m6.image
                      h5.member_name Carlos Esteban Jaramillo Schloss
                      p.member_title Consultor Oficina Bogot√°
              
            - each member, index in members
                div(id="modal#{index}", class="modal modal_team")
                    img(class="img_modal_team", src="/img/equipo/large/#{member.picture}")
                    div.modal-content
                        h4= member.name
                        p !{member.desc}
