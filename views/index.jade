extends layout

block content

	- var cities = [{"img": "barcelona.jpg", "name":"Barcelona", "address": "Muntaner, 269, 2º 1ª. 08021"}, {"img": "bogota.jpg", "name":"Bogotá", "address": "Calle 69A No. 4-31"}, {"img": "lima.jpg", "name":"Lima", "address": "Calle Enrique Palacios, 335 oficina 501"}];

	case language
		when "en"
			- var desc = "EN Summa Consultores Jurídicos es una firma internacional con sede en Barcelona, Bogotá y Lima, y aliados en otras ciudades, que presta asesoría jurídica especializada a personas y empresas tanto en sus procesos de expansión, como en su actividad cotidiana.";
		when "ca"
			- var desc = "CA Summa Consultores Jurídicos es una firma internacional con sede en Barcelona, Bogotá y Lima, y aliados en otras ciudades, que presta asesoría jurídica especializada a personas y empresas tanto en sus procesos de expansión, como en su actividad cotidiana.";
		default
			- var desc = "ES Summa Consultores Jurídicos es una firma internacional con sede en Barcelona, Bogotá y Lima, y aliados en otras ciudades, que presta asesoría jurídica especializada a personas y empresas tanto en sus procesos de expansión, como en su actividad cotidiana.";
		
	section.slider
		ul.slides
			- each city, i in cities
				li
					img(src="/img/#{city.img}")
					.caption.center-align
						h5 #{desc}
						.address
							h5 #{city.name} 
							h5 #{city.address}
